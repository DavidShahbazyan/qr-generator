<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTimePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="am.davsoft.qrgen.controllers.subViews.EventSubViewController">
    <children>
        <JFXTextField fx:id="txtFieldTitle" focusColor="ORANGE" labelFloat="true" promptText="Title" />
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <JFXTextField fx:id="txtFieldLocation" focusColor="ORANGE" labelFloat="true" promptText="Location" HBox.hgrow="ALWAYS" />
                <JFXCheckBox fx:id="checkBoxAllDayEvent" checkedColor="ORANGE" selected="true" text="All Day Event" />
            </children>
        </HBox>
        <HBox fx:id="hBoxStartDate" spacing="10.0">
            <children>
                <JFXDatePicker fx:id="datePickerStartDate" defaultColor="ORANGE" promptText="Start Date" />
            <JFXTimePicker fx:id="timePickerStartDate" defaultColor="ORANGE" promptText="Start Time" />
            </children>
        </HBox>
      <HBox fx:id="hBoxEndDate" spacing="10.0">
         <children>
            <JFXDatePicker fx:id="datePickerEndDate" defaultColor="ORANGE" promptText="End Date" />
            <JFXTimePicker fx:id="timePickerEndDate" defaultColor="ORANGE" promptText="End Time" />
         </children>
      </HBox>
        <JFXTextArea fx:id="txtAreaDescription" focusColor="ORANGE" labelFloat="true" prefHeight="76.0" prefWidth="498.0" promptText="Description" />
    </children>
    <padding>
        <Insets top="15.0" />
    </padding>
</VBox>
