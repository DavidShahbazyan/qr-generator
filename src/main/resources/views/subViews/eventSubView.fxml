<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="am.davsoft.qrgen.controllers.subViews.EventSubViewController">
    <GridPane hgap="5.0" vgap="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="Title">
                <font>
                    <Font name="Segoe UI" size="13.0" />
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="77.0" text="All Date" GridPane.rowIndex="1">
                <font>
                    <Font name="Segoe UI" size="13.0" />
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="17.0" text="Start Date" GridPane.rowIndex="2">
                <font>
                    <Font name="Segoe UI" size="13.0" />
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="47.0" text="End Date" GridPane.rowIndex="3">
                <font>
                    <Font name="Segoe UI" size="13.0" />
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="107.0" text="Location" GridPane.rowIndex="4">
                <font>
                    <Font name="Segoe UI" size="13.0" />
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="17.0" text="Description" GridPane.rowIndex="5">
                <font>
                    <Font name="Segoe UI" size="13.0" />
                </font>
            </Label>
            <JFXTextField GridPane.columnIndex="1" />
            <JFXTextArea prefHeight="76.0" prefWidth="498.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <JFXCheckBox GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <JFXDatePicker GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <JFXDatePicker GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <JFXTextField GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </children>
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </GridPane>
    <Region VBox.vgrow="ALWAYS" />
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <children>
            <JFXButton style="-fx-background-color: #555;" text="Reset" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </JFXButton>
            <JFXButton style="-fx-background-color: #ffa500;" text="Generate" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </JFXButton>
        </children>
    </HBox>
</VBox>
